# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
end_of_line = lf
indent_style = space
max_line_length = 120

[*.md]
indent_size = 2

[*.js]
indent_size = 2

[*.ts]
indent_size = 2

[*.json,*.yml,*.yaml]
indent_size = 2
